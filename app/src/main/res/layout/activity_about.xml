<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/content_desc_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_about"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="App Logo"
            app:layout_constraintTop_toBottomOf="@id/aboutTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/appLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- App Version -->
        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/appName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- App Description -->
        <TextView
            android:id="@+id/appDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="KH-Stay is your trusted platform for finding and renting properties in Cambodia."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/appVersion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Contact Section -->
        <TextView
            android:id="@+id/contactHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/appDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Contact Email -->
        <TextView
            android:id="@+id/contactEmail"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="support@khstay.com"
            android:textColor="#FF6B35"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_payment"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            app:layout_constraintTop_toBottomOf="@id/contactHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Contact Phone -->
        <TextView
            android:id="@+id/contactPhone"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="+855 123 456 789"
            android:textColor="#FF6B35"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_payment"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            app:layout_constraintTop_toBottomOf="@id/contactEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp" />

        <!-- Website -->
        <TextView
            android:id="@+id/websiteLink"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="www.khstay.com"
            android:textColor="#FF6B35"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            app:layout_constraintTop_toBottomOf="@id/contactPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp" />

        <!-- Legal Section -->
        <TextView
            android:id="@+id/legalHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legal"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/websiteLink"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Privacy Policy -->
        <TextView
            android:id="@+id/privacyPolicy"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Privacy Policy"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            app:layout_constraintTop_toBottomOf="@id/legalHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Terms of Service -->
        <TextView
            android:id="@+id/termsOfService"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Terms of Service"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            app:layout_constraintTop_toBottomOf="@id/privacyPolicy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp" />

        <!-- Licenses -->
        <TextView
            android:id="@+id/licenses"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Open Source Licenses"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            app:layout_constraintTop_toBottomOf="@id/termsOfService"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>