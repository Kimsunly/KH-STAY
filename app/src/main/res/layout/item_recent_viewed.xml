<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/propertyImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="Property Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/propertyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modern Apartment"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/propertyImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/propertyImage"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/propertyPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$500/month"
        android:textColor="#FF6B35"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/propertyImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/propertyName"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/propertyLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phnom Penh"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/propertyImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/propertyPrice"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/viewedAt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Viewed: Dec 20, 2024"
        android:textColor="@color/text_secondary"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/propertyImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/propertyImage"
        android:layout_marginStart="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>