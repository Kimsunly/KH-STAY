<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ðŸŽ¨ SKELETON LOADING -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <include layout="@layout/skeleton_profile" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- ðŸ“± ACTUAL CONTENT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Header with centered title only -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/topTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Scrollable content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="32dp"
                android:paddingBottom="32dp">

                <!-- Profile Picture with Camera Icon -->
                <FrameLayout
                    android:id="@+id/profilePictureFrame"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_background"
                        android:clipToOutline="true"
                        android:contentDescription="@string/content_desc_profile_image" />

                    <ImageView
                        android:id="@+id/cameraIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|end"
                        android:src="@drawable/ic_camera"
                        android:contentDescription="@string/change_photo"
                        android:background="@drawable/orange_circle"
                        android:padding="6dp" />
                </FrameLayout>

                <!-- Name -->
                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/profile_name_placeholder"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <!-- Email -->
                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/profile_email_placeholder"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp" />

                <!-- Menu Items Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="48dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <!-- Edit Profile Item -->
                    <include
                        android:id="@+id/editProfileItem"
                        layout="@layout/profile_menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                    <!-- Booking Requests Item -->
                    <include
                        android:id="@+id/bookingRequestsItem"
                        layout="@layout/profile_menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                    <!-- Settings Item -->
                    <include
                        android:id="@+id/settingsItem"
                        layout="@layout/profile_menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                    <!-- Payment Item -->
                    <include
                        android:id="@+id/paymentItem"
                        layout="@layout/profile_menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                    <!-- Notification Item -->
                    <include
                        android:id="@+id/notificationItem"
                        layout="@layout/profile_menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                    <!-- Recent Viewed Item -->
                    <include
                        android:id="@+id/recentViewedItem"
                        layout="@layout/profile_menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                    <!-- Favorites Item -->
                    <include
                        android:id="@+id/favoritesItem"
                        layout="@layout/profile_menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                    <!-- About Item -->
                    <include
                        android:id="@+id/aboutItem"
                        layout="@layout/profile_menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="56dp" />

                </LinearLayout>

                <!-- Sign Out Button -->
                <TextView
                    android:id="@+id/signOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/label_sign_out"
                    android:textColor="#FF6B35"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="48dp" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>