<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸŽ¨ SKELETON LOADING -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <include layout="@layout/skeleton_detail" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- ðŸ“± ACTUAL CONTENT -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:visibility="gone">

        <!-- Scrollable content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Header image with overlay back & favorite -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp">

                    <ImageView
                        android:id="@+id/iv_header_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/content_desc_property_image"
                        tools:src="@drawable/house_image" />

                    <!-- Back -->
                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/bg_circle_white"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="@string/content_desc_back"
                        app:tint="@color/black"
                        android:padding="6dp"
                        android:layout_gravity="start|top" />

                    <!-- Favorite -->
                    <ImageButton
                        android:id="@+id/btn_favorite"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/bg_circle_white"
                        android:src="@drawable/ic_favorite_outline"
                        android:contentDescription="@string/content_desc_favorite"
                        app:tint="@color/primary"
                        android:padding="6dp"
                        android:layout_gravity="end|top" />
                </FrameLayout>

                <!-- Card content container -->
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <!-- Title + price link (styled like Figma) -->
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        tools:text="Modern 3-Bedroom House with Garden" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        tools:text="600$/month" />

                    <!-- Location section title -->
                    <TextView
                        android:id="@+id/tv_location_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/label_location"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <!-- Location row -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_location"
                            android:contentDescription="@string/content_desc_location_icon"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            tools:text="Sen Sok District, Phnom Penh, Cambodia" />
                    </LinearLayout>

                    <!-- Map (rounded card) â€“ interactive MapView -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mapCard"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardUseCompatPadding="true">

                        <com.google.android.gms.maps.MapView
                            android:id="@+id/mapView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Open in Google Maps button -->
                    <Button
                        android:id="@+id/btn_open_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Open in Google Maps"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/primary" />

                    <!-- Description -->
                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:maxLines="4"
                        android:ellipsize="end"
                        tools:text="This beautiful 3-bedroom, 2-bathroom house offers 150 mÂ² of living space, including a large living room, open kitchen, and small backyard" />

                    <!-- View more / Book Now row -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btn_view_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_more"
                            android:background="@android:color/transparent"
                            android:textColor="@color/primary" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btn_book_now"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="@string/book_now"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/primary" />
                    </LinearLayout>

                    <!-- Owner row -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/iv_owner_avatar"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_avatar_placeholder"
                            android:contentDescription="@string/content_desc_owner_avatar" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tv_owner_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                tools:text="Srey Mom" />

                            <TextView
                                android:id="@+id/tv_owner_role"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_hint"
                                android:textSize="12sp"
                                tools:text="@string/owner_role" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_chat_owner"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_circle_white"
                            android:src="@drawable/ic_chat"
                            android:contentDescription="@string/content_desc_chat_owner"
                            app:tint="@color/primary" />

                        <ImageButton
                            android:id="@+id/btn_call_owner"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_circle_white"
                            android:src="@drawable/ic_call"
                            android:contentDescription="@string/content_desc_call_owner"
                            app:tint="@color/primary" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Progress overlay -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>