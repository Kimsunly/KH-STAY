<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgHouse"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/house_image"/>

        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_toEndOf="@id/imgHouse"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@id/priceContainer"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Modern House"/>

            <TextView
                android:id="@+id/tvLocation"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sen Sok District"/>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Views -->
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_eye"
                    android:contentDescription="Views"
                    app:tint="@color/text_hint" />

                <TextView
                    android:id="@+id/tvViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="42"
                    android:textSize="10sp"
                    android:textColor="@color/text_hint" />

                <!-- Favorites -->
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_favorite_outline"
                    android:contentDescription="Favorites"
                    app:tint="@color/text_hint" />

                <TextView
                    android:id="@+id/tvFavorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="8"
                    android:textSize="10sp"
                    android:textColor="@color/text_hint" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/priceContainer"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPrice"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF6B35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$420"/>

            <!-- Popularity Score Badge (Optional - show if high score) -->
            <LinearLayout
                android:id="@+id/popularityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/badge_popularity"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_fire"
                    android:contentDescription="Hot" />

                <TextView
                    android:id="@+id/tvPopularityScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="125"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>