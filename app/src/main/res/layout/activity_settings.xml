<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/content_desc_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_settings"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dark Mode Section -->
        <TextView
            android:id="@+id/appearanceHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/settingsTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/darkModeContainer"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/appearanceHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/darkModeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                app:tint="#FF6B35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="Dark Mode" />

            <TextView
                android:id="@+id/darkModeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Dark Mode"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/darkModeIcon"
                app:layout_constraintEnd_toStartOf="@id/darkModeSwitch"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp" />

            <Switch
                android:id="@+id/darkModeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Notifications Section -->
        <TextView
            android:id="@+id/notificationsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/darkModeContainer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notificationContainer"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/notificationsHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications"
                app:tint="#FF6B35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="Notifications" />

            <TextView
                android:id="@+id/notificationLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Push Notifications"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/notificationIcon"
                app:layout_constraintEnd_toStartOf="@id/notificationSwitch"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp" />

            <Switch
                android:id="@+id/notificationSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- General Section -->
        <TextView
            android:id="@+id/generalHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/notificationContainer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Language Option -->
        <TextView
            android:id="@+id/languageOption"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Language"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            app:layout_constraintTop_toBottomOf="@id/generalHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Privacy Option -->
        <TextView
            android:id="@+id/privacyOption"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Privacy Policy"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            app:layout_constraintTop_toBottomOf="@id/languageOption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp" />

        <!-- Terms Option -->
        <TextView
            android:id="@+id/termsOption"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Terms &amp; Conditions"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            app:layout_constraintTop_toBottomOf="@id/privacyOption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp" />

        <!-- Clear Cache Option -->
        <TextView
            android:id="@+id/clearCacheOption"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Clear Cache"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="12dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            app:layout_constraintTop_toBottomOf="@id/termsOption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>