<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Light Mode -->
    <style name="Theme.KHSTAY" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary Colors --><item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background & Surface Colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text & Hint Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Status Bar Color -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Makes status bar icons (clock, battery) dark for visibility on light background -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Error Color -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

    </style>

    <!-- =================================================================================== -->
    <!-- FIX: Define the missing Card and Text styles below                                -->
    <!-- =================================================================================== -->

    <!-- Definition for the 'Card' style -->
    <style name="Card" parent="Widget.Material3.CardView.Elevated">
        <!-- You can add default attributes for all your cards here. For example: -->
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Definition for the 'Text' style -->
    <style name="Text" parent="Widget.MaterialComponents.TextView">
        <!-- Using a theme attribute (?attr) makes this style automatically adapt to light/dark mode -->
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.KHSTAY" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

</resources>
