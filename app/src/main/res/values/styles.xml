<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme -->
    <style name="Theme.KHStay" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <!-- Buttons -->
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/background</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <!-- Text Styles -->
    <style name="Text.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.Body">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <!-- Room Card -->
    <style name="Card.Room">
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <!-- Filter/Sort Chips -->
    <style name="Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/background_light</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>
